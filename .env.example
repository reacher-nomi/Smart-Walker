# MedHealth Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to Git!

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_USER=medhealth
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE
POSTGRES_DB=medhealth_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://medhealth:CHANGE_ME_SECURE_PASSWORD_HERE@postgres:5432/medhealth_db

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://redis:6379

# ==============================================
# JWT Authentication
# ==============================================
# Generate with: openssl rand -base64 48
JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARACTERS_RANDOM_STRING_FOR_JWT_SIGNING

# ==============================================
# Device HMAC Authentication
# ==============================================
# Generate with: openssl rand -base64 32
DEVICE_SECRET=CHANGE_ME_DEVICE_HMAC_SECRET_KEY_HERE

# ==============================================
# pgAdmin (Optional - for database management)
# ==============================================
PGADMIN_DEFAULT_EMAIL=admin@medhealth.local
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_PGADMIN_PASSWORD

# ==============================================
# Server Configuration
# ==============================================
SERVER_BIND_ADDR=0.0.0.0:8080
SERVER_WORKERS=4

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=info
RUST_LOG=info

# ==============================================
# CORS (Comma-separated origins)
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000
